# ============================================
# PRODUCTION .ENV TEMPLATE
# ============================================
# Copy this to .env on production server and update with real values

# Database Configuration (Docker network hostnames)
DATABASE_URL=postgresql://prod_user:CHANGE_THIS_PASSWORD@postgres:5432/dshome_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=dshome_prod

# Redis Configuration (Docker network hostname)
REDIS_URL=redis://redis:6379

# Meilisearch Configuration (Docker network hostname)
MEILISEARCH_URL=http://meilisearch:7700
MEILISEARCH_MASTER_KEY=CHANGE_THIS_MASTER_KEY

# Backend API Configuration
API_PORT=3000
API_URL=https://www.yourdomain.com

# Admin Panel Configuration
NEXT_PUBLIC_API_URL=https://www.yourdomain.com/admin/api

# JWT Configuration (CHANGE THESE!)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Application
NODE_ENV=production
LOG_LEVEL=info

# Currency & Locale
DEFAULT_CURRENCY=EUR
DEFAULT_LOCALE=bg
